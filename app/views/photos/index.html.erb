<div id = "photos">
<h1>Listing photos</h1>
<table id = "tablepics">
	<th colspan = "3"> Photos
	</th>
<% @photos.each do |photo| %>
  <tr>
    <td class = "name"><%=h photo.name %></td>
	<td class = "pic"><%= image_tag photo.photo.url(:small) %></td>

    <td class = "edits">
		<table id = "photonav">
			<tr><td><%= link_to image_tag("edit.gif", :title => "Edit"), edit_photo_path(photo) %></td></tr>
   			<tr><td><%= link_to image_tag("trash.gif", :title => "Dump"), photo, :confirm => 'Are you sure?', :method => :delete %></td></tr>
				
		</table>
	</td>



 
  </tr>
<% end %>
  <tr>
	<td></td>
  	<td>
  		<%= link_to image_tag("add.png", :title => "Add a photo"), new_photo_path %>
  	</td>
  </tr>
</table>

<br />



</div>